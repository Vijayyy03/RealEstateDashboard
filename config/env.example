# Environment Configuration for Real Estate Investment System

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=real_estate_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# API Configuration
API_TITLE=Real Estate Investment API
API_VERSION=1.0.0
API_DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]

# Web Scraping Configuration
SCRAPING_DELAY=1.0
SCRAPING_MAX_RETRIES=3
SCRAPING_TIMEOUT=30
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
MLS_SCRAPING_ENABLED=true
MLS_BATCH_SIZE=100
TAX_RECORDS_ENABLED=true
ZONING_ENABLED=true
API_DATA_ENABLED=true

# Machine Learning Configuration
ML_MODEL_DIR=ml_models/saved_models
ML_SCORING_MODEL=deal_scorer
ML_PREDICTION_MODEL=yield_predictor
ML_RANDOM_STATE=42
ML_TEST_SIZE=0.2

# Dashboard Configuration
DASHBOARD_TITLE=Real Estate Investment Dashboard
DASHBOARD_THEME=light
DASHBOARD_ICON=üè†
DASHBOARD_LAYOUT=wide

# External API Keys (Optional - Add your keys here)
ZILLOW_API_KEY=your_zillow_api_key_here
ZILLOW_BASE_URL=https://api.bridgedataoutput.com
REDFIN_API_KEY=your_redfin_api_key_here
CENSUS_API_KEY=your_census_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
PROPSTACK_API_KEY=your_propstack_api_key_here
PROPSTACK_BASE_URL=https://api.propstack.in/v1

# Feature Engineering Configuration
ML_FEATURE_COLUMNS=["price", "sqft", "bedrooms", "bathrooms", "year_built", "cap_rate", "noi", "cash_on_cash", "location_score"]
